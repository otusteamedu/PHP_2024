<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://raw.github.com/doctrine/doctrine3/master/doctrine-mapping.xsd">
    <entity name="App\MediaMonitoring\Domain\Entity\Post"
            table="media_monitoring_posts">
        <id name="id" type="post_id" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="media_monitoring_posts_seq"/>
        </id>

        <embedded name="title"
                  class="App\MediaMonitoring\Domain\Entity\PostTitle"
                  use-column-prefix="false"/>

        <embedded name="url"
                  class="App\MediaMonitoring\Domain\Entity\PostUrl"
                  use-column-prefix="false"/>

        <field name="date" type="datetime" column="date"/>
    </entity>
</doctrine-mapping>
