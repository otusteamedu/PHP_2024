{% extends 'indexAuth.php.twig' %}


{% block content %}

    {% for order in ordersAuth  %}
 <div class="card product " style="width: 18rem;" >
     <div class="card-body">
         <h5 class="card-title">№ {{order.id}}</h5>
         <p class="card-text">Адресс {{order.address}}</p>
         <p class="card-text">Телефон  {{order.phone}}</p>
         <p class="card-text">email  {{order.email}}</p>
         <p class="card-text">Статус: {{order.status}}</p>
         <a href="/orderAuth/one?id={{order.id}}"><button class="comeBackBtn">Подробнее</button></a>
     </div>
 </div>
{% endfor %}

{% if ordersAuth is empty %}
    <h2>У вас нет заказов</h2>
{% endif %}
{% endblock %}